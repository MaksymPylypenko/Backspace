<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="top|center_vertical"
    android:orientation="vertical">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:gravity="top">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:foregroundGravity="center_horizontal">

            <ImageView
                android:id="@+id/planetIcon"
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:layout_gravity="center_horizontal"
                android:foregroundGravity="clip_horizontal" />
        </FrameLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/planetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp"
            android:text="@string/title_activity_planet_info"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="532dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@drawable/simple_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="263dp"
            android:layout_height="450dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp"
            android:layout_weight="0"
            android:background="@drawable/button_border"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Population: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Lowest temp: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/minTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximum temp: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/maxTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 year on "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/years"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flights from: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/planetFromLocations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Here"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flights to: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/planetToLocations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Here"
                    android:textSize="18sp" />

            </TableRow>
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="278dp"
            android:layout_height="557dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="@string"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="22sp" />
    </TableRow>

</TableLayout>